---
import "../styles/global.css";
import Menu from "../components/Menu.astro";

// Langue par défaut
const locale = "fr";

// Récupérer le thème depuis les cookies
const themeCookie = Astro.cookies.get("theme")?.value || "light";
---
<!doctype html>
<html lang="fr" data-theme={themeCookie} class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>TP SVG R312</title>
	</head>
	<body class="h-full">
		<div class="h-full flex flex-col min-h-0">
			<div class="flex-1 min-h-0">
				<header>
					
		  <Menu />										
				</header>
				<slot />
			</div>
		</div>
		
		<!-- Script pour gérer le changement de thème -->
		<script is:inline>
			// Charger le thème depuis localStorage au chargement
			const savedTheme = localStorage.getItem('theme') || 'light';
			document.documentElement.setAttribute('data-theme', savedTheme);
		</script>
	</body>
</html>