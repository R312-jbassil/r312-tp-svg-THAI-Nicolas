<script>
  function updateSVGViewer() {
    const svgCode = document.getElementById('svg-code') as HTMLTextAreaElement;
    const svgViewer = document.getElementById('svg-viewer');
    
    if (svgCode && svgViewer) {
      try {
        svgViewer.innerHTML = svgCode.value;
      } catch (error) {
        console.error('Erreur lors de la mise à jour du SVG:', error);
      }
    }
  }

  document.addEventListener('DOMContentLoaded', function() {
    const svgCode = document.getElementById('svg-code') as HTMLTextAreaElement;
    if (svgCode) {
      svgCode.addEventListener('input', updateSVGViewer);
      updateSVGViewer();
    }
  });
</script>