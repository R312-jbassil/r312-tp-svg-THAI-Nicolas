---
import Layout from "../layouts/Layout.astro";
import { ui } from "../i18n/ui.js";

const locale = Astro.locals.lang as 'en' | 'fr' ?? 'en';
console.log('Locale in index:', locale);
const user = Astro.locals.user;
---

<Layout>
  <div class="min-h-[calc(100vh-4rem)] bg-base-200">
    <!-- Hero Section -->
    <div class="hero min-h-[calc(100vh-4rem)]">
      <div class="hero-content text-center">
        <div class="max-w-3xl">
          <!-- IcÃ´ne principale -->
          <div class="flex justify-center mb-8">
            <div class="relative">
              <div class="absolute inset-0 bg-primary opacity-20 blur-3xl rounded-full"></div>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 text-primary relative" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
              </svg>
            </div>
          </div>

          <h1 class="text-5xl md:text-6xl font-bold mb-6">
            {ui[locale].index.title}
          </h1>
          
          <p class="text-xl mb-8 text-base-content/70">
            {ui[locale].index.description}
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/generator" class="btn btn-primary btn-lg gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
              </svg>
              {ui[locale].index.button}
            </a>
            
            {user && (
              <a href="/gallery" class="btn btn-outline btn-lg gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {ui[locale].nav.gallery}
              </a>
            )}
          </div>

          <!-- Features -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-16">
            <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow">
              <div class="card-body items-center text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <h3 class="card-title text-lg">AI Powered</h3>
                <p class="text-sm text-base-content/70">Generate SVGs from text prompts using AI</p>
              </div>
            </div>

            <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow">
              <div class="card-body items-center text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                <h3 class="card-title text-lg">Real-time Edit</h3>
                <p class="text-sm text-base-content/70">Modify your SVGs with conversational AI</p>
              </div>
            </div>

            <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow">
              <div class="card-body items-center text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                </svg>
                <h3 class="card-title text-lg">Save & Export</h3>
                <p class="text-sm text-base-content/70">Save your creations and export as SVG</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>